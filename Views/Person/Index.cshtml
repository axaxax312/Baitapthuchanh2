@model IEnumerable<HoTrungNguyenBTTH2.Models.Person>
<p>
    <a class="btn btn-success" asp-action="Create">Create a new person</a>
</p>
<table class="table table-all">
    <tr>
        <th>Person Age</th>
        <th>Person Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.PersonAge)</td>
            <td>@Html.DisplayFor(m => item.PersonName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonName">Sua</a>
                <a asp-action="Delete" asp-route-id="@item.PersonName">Xoa</a>
            </td>
        </tr>
    }
</table>