@model HoTrungNguyenBTTH2.Models.Customer
<h1>Tao moi 1 sinh vien</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerID" class="controle-label"></label>
                <input asp-for="CustomerID" class="form-control">
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control">
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <br>
            <div clas="form-group">
                <input class="btn btn-primary" type="submit" value="Save">
                <a class="btn btn-success" asp-action="Index">Danh sach khach hang</a>
            </div>
        </form>
    </div>
</div>